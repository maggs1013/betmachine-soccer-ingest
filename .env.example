# REQUIRED for The Odds API (freemium)
ODDS_API_KEY=REPLACE_WITH_YOUR_KEY
ODDS_REGIONS=us,uk,eu
ODDS_FORMAT=decimal
ODDS_SPORT_KEYS=soccer_epl,soccer_uefa_champs_league

# FBref target page to scrape (example: Premier League stats overview)
FBREF_LEAGUE_URL=https://fbref.com/en/comps/9/stats/Premier-League-Stats

# --- NEW: API-Football (API-Sports) ---
# You can authenticate EITHER via direct API-Sports key OR via RapidAPI key/host.
# Option A (direct, recommended):
APIFOOTBALL_BASE=https://v3.football.api-sports.io
APIFOOTBALL_KEY=REPLACE_WITH_YOUR_APISPORTS_KEY   # header x-apisports-key
# Option B (RapidAPI):
# APIFOOTBALL_BASE=https://api-football-v1.p.rapidapi.com/v3
# APIFOOTBALL_RAPIDAPI_KEY=REPLACE_WITH_YOUR_RAPIDAPI_KEY
# APIFOOTBALL_RAPIDAPI_HOST=api-football-v1.p.rapidapi.com

# League & season defaults for API-Football probes
APIFOOTBALL_LEAGUE_ID=39     # EPL = 39 (example)
APIFOOTBALL_SEASON=2024      # season (year)

# --- NEW: Football-Data.org (official REST) ---
FOOTBALLDATA_BASE=https://api.football-data.org/v4
FOOTBALLDATA_TOKEN=REPLACE_WITH_YOUR_FDORG_TOKEN   # header X-Auth-Token

# Optional: limit how many pages/records we save per run
PAGINATION_LIMIT=3
